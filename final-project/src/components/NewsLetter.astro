---
import '../styles/global.css'
---

<section class="newsletter">
  <div class="newsletter-content">
    <h2 class="title">Subscribe to our newsletter</h2>
    <p class="text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros elementum tristique.</p>
    <div class="form">
      <div class="form-input">
        <input type="email" placeholder="Enter your email" class="input-email">
        <input type="submit" value="Sign Up" class="btn">
      </div>
      <p class="subtext">By clicking Sign Up you're confirming that you agree with our Terms and Conditions.</p>
    </div>
  </div>
</section>

<style>
  .newsletter {
    font-family: "Roboto", sans-serif;
    display: none;
  }

  @media screen and (min-width: 680px) {
    .newsletter {
      padding: 112px 24px;
      display: block;
    }

    .newsletter-content {
      max-width: 768px;
      width: 100%;
      margin: 0 auto;
    }

    .title {
      font-size: 48px;
      font-weight: 700;
      margin-bottom: 24px;
      text-align: center;
    }

    .text {
      font-size: 18px;
      font-weight: 400;
      line-height: 27px;
      text-align: center;
    }

    .form {
      max-width: 520px;
      width: 100%;
      margin: 40px auto 0;
    }

    .form-input {
      display: flex;
      gap: 16px;
    }

    input {
      padding: 15px 12px;
      border-radius: 5px;
      border: 1px solid var(--color_black);
    }

    .input-email {
      width: 100%;
    }

    .subtext {
      font-size: 12px;
      font-weight: 400;
      margin-top: 16px;
      text-align: center;
    }

    .btn {
      background-color: var(--color_black);
      color: var(--color_white);
      padding: 8px 20px;
      border-radius: 5px;
      width: fit-content;
    }

    .btn:hover {
      cursor: pointer;
      opacity: 0.7;
    }
  }


</style>