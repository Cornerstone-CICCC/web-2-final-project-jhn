  }
  .card-text p {
    font-size: 1rem;
    font-weight: 400;
    line-height: 24px;
    text-align: center;
    width: 85%;
    padding-bottom: 25px;
  }
  .cards .card {
    display: none;
  }
  .cards .card:nth-child(-n + 3) {
    display: flex;
  }
  .cards .visible {
    display: flex;
  }

  .show-more-btn {
    display: flex;
    justify-content: center;
  }
  .show-more-btn button {
    width: 75%;
    height: auto;
    padding: 25px;
    font-size: 1rem;
    border: 1px solid black;
    border-radius: 5px;
    margin-top: 60px;
    background-color: transparent;
  }
  .hidden {
    display: none;
  }
  @media screen and (min-width: 640px) {
    .cards {
      grid-template-columns: repeat(2, 1fr);
    }
    .card {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
    }
    .container .title {
      width: 100%;
    }
    .container .title h2 {
      font-size: 3rem;
